use crate::connection::Connection;
use std::path::Path;
use std:io;

struct Protocol;
impl Protocol {
    pub(crate) fn add_file(files: Vec<&str>) -> {
        let paths: Vec<_> = files.into_iter().map(Path::new).collect();
        println!("files: {:?}", paths);
    }
}
impl Connection {
    pub(crate) fn add_files(&mut self, files: Vec<&str>) -> io::Result<()> {
        self.send(Protocol::add_file(files))
    }
}
